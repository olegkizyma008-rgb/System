# Windsurf Cleanup System - Aliases
# –î–æ–¥–∞–π—Ç–µ –¥–æ ~/.zshrc: source ~/Documents/GitHub/System/.windsurf_aliases

# –û—Å–Ω–æ–≤–Ω—ñ –∫–æ–º–∞–Ω–¥–∏
alias wc-clean='cd ~/Documents/GitHub/System && ./deep_windsurf_cleanup.sh'
alias wc-restore='cd ~/Documents/GitHub/System && ./restore_windsurf_backup.sh'
alias wc-check='cd ~/Documents/GitHub/System && ./check_windsurf_backup.sh'
alias wc-start='cd ~/Documents/GitHub/System && ./start.sh'

# –®–≤–∏–¥–∫—ñ –ø–µ—Ä–µ–≤—ñ—Ä–∫–∏
alias wc-backup-list='ls -lhd /tmp/windsurf_backup_*'
alias wc-process='ps aux | grep "sleep 18000" | grep -v grep'
alias wc-hostname='scutil --get HostName'
alias wc-machineid='cat ~/Library/Application\ Support/Windsurf/machineid 2>/dev/null || echo "–ù–µ –∑–Ω–∞–π–¥–µ–Ω–æ"'

# –î–æ–∫—É–º–µ–Ω—Ç–∞—Ü—ñ—è
alias wc-readme='cat ~/Documents/GitHub/System/README.md | less'
alias wc-workflow='cat ~/Documents/GitHub/System/WORKFLOW.md | less'
alias wc-security='cat ~/Documents/GitHub/System/SECURITY.md | less'
alias wc-changelog='cat ~/Documents/GitHub/System/CHANGELOG.md | less'

# –£—Ç–∏–ª—ñ—Ç–∏
alias wc-kill-restore='ps aux | grep "sleep 18000" | grep -v grep | awk "{print \$2}" | xargs kill'
alias wc-backup-save='BACKUP_DIR=$(ls -td /tmp/windsurf_backup_* 2>/dev/null | head -1) && [ -n "$BACKUP_DIR" ] && cp -r "$BACKUP_DIR" ~/Documents/windsurf_backup_permanent_$(date +%Y%m%d_%H%M%S) && echo "–ó–±–µ—Ä–µ–∂–µ–Ω–æ –≤ ~/Documents/" || echo "–ë–µ–∫–∞–ø –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ"'

echo "‚úÖ Windsurf Cleanup System aliases –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–æ!"
echo "üí° –î–æ—Å—Ç—É–ø–Ω—ñ –∫–æ–º–∞–Ω–¥–∏:"
echo "   wc-clean      - –ó–∞–ø—É—Å—Ç–∏—Ç–∏ –æ—á–∏—â–µ–Ω–Ω—è"
echo "   wc-restore    - –í—ñ–¥–Ω–æ–≤–∏—Ç–∏ –∑ –±–µ–∫–∞–ø—É"
echo "   wc-check      - –ü–µ—Ä–µ–≤—ñ—Ä–∏—Ç–∏ —Å—Ç–∞—Ç—É—Å"
echo "   wc-start      - –ì–æ–ª–æ–≤–Ω–µ –º–µ–Ω—é"
echo ""
echo "üìö –î–æ–∫—É–º–µ–Ω—Ç–∞—Ü—ñ—è:"
echo "   wc-readme     - –û—Å–Ω–æ–≤–Ω–∞ –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü—ñ—è"
echo "   wc-workflow   - –°—Ö–µ–º–∞ —Ä–æ–±–æ—Ç–∏"
