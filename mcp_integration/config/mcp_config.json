{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "description": "Context7 MCP Server for memory and context management",
      "timeout": 30000,
      "retryAttempts": 3
    },
    "sonarqube": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "SONARQUBE_TOKEN",
        "-e",
        "SONARQUBE_ORG",
        "-e",
        "SONARQUBE_URL",
        "mcp/sonarqube"
      ],
      "env": {
        "SONARQUBE_TOKEN": "${SONAR_API_KEY}",
        "SONARQUBE_URL": "${SONAR_URL}",
        "SONARQUBE_ORG": "${SONAR_ORG_KEY}"
      },
      "description": "SonarQube MCP Server for code quality analysis",
      "timeout": 60000,
      "retryAttempts": 2
    },
    "context7-docs": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "description": "Context7 for SonarQube API documentation via Upstash",
      "timeout": 30000,
      "retryAttempts": 3,
      "metadata": {
        "purpose": "sonarqube-api-docs",
        "library": "SonarSource/sonarqube"
      }
    }
  },
  "defaultServer": "context7",
  "logging": {
    "level": "info",
    "file": "mcp_integration.log",
    "maxSize": "10MB",
    "maxFiles": 5
  }
}